<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="24dp">

    <!-- Carte de score avec effet "verre" -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="28dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="10dp"
        android:backgroundTint="#AAFFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Titre principal -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ¨ RÃ©sultat du Quiz âœ¨"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#2C2C54"
                android:layout_marginBottom="20dp"
                android:fontFamily="sans-serif-medium"/>

            <!-- RÃ©sultats -->
            <TextView
                android:id="@+id/resultTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tu as 7/10 bonnes rÃ©ponses"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#40407A"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/difficultyTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DifficultÃ© : IntermÃ©diaire"
                android:textSize="18sp"
                android:textColor="#474787"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/pourcentageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Taux de rÃ©ussite : 70%"
                android:textSize="20sp"
                android:textColor="#218C74"
                android:textStyle="bold"
                android:layout_marginBottom="30dp"/>

            <!-- Barre de sÃ©paration -->
            <View
                android:layout_width="80dp"
                android:layout_height="2dp"
                android:background="#B33939"
                android:layout_marginBottom="24dp"/>

            <!-- Boutons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2">

                <Button
                    android:id="@+id/backToMenuButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="ðŸ  Menu"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:background="@drawable/btn_blue"
                    android:layout_marginEnd="8dp"
                    android:padding="12dp"/>

                <Button
                    android:id="@+id/shareButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="ðŸš€ Partager"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:background="@drawable/btn_purple"
                    android:layout_marginStart="8dp"
                    android:padding="12dp"/>


                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="16dp"
                    android:progress="0"
                    android:max="100"
                    android:progressTint="@color/purple_500"
                    android:backgroundTint="@android:color/darker_gray"
                    android:scaleY="2"
                    android:indeterminate="false" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
