<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- IMAGE DE FOND JAPONAISE -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/jap"
        android:contentDescription="Image de fond japonaise"
        android:alpha="0.85"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- GRADIENT EN SUPERPOSITION LÉGÈRE POUR LISIBILITÉ DU TEXTE -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient_modern"
        android:alpha="0.4" />

    <!-- TITRE PRINCIPAL -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:letterSpacing="0.05"
        android:shadowColor="#00FFFF"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="12"
        android:text="FlashCards"
        android:textColor="#00FFFF"
        android:textSize="38sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- SOUS-TITRE -->
    <TextView
        android:id="@+id/appSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:letterSpacing="0.05"
        android:shadowColor="#FFA500"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="6"
        android:text="Apprends et progresse à ton rythme"
        android:textColor="#FFD700"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appTitle" />

    <!-- IMAGE LUFFY -->
    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="467dp"
        android:layout_height="444dp"
        android:layout_marginStart="-100dp"
        android:layout_marginEnd="-50dp"
        app:layout_constraintBottom_toTopOf="@+id/startQuizBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appSubtitle"
        app:layout_constraintVertical_bias="0.418"
        app:srcCompat="@drawable/luffy" />

    <!-- BOUTON DÉMARRER -->
    <Button
        android:id="@+id/startQuizBtn"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginTop="500dp"
        android:background="@drawable/btn_start_quiz"
        android:elevation="12dp"
        android:letterSpacing="0.08"
        android:shadowColor="#00FFFF"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"
        android:text="Démarrer le Quiz"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appSubtitle" />

    <!-- BOUTON A PROPOS -->
    <Button
        android:id="@+id/aboutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="À propos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/startQuizBtn"
        app:layout_constraintStart_toStartOf="@+id/startQuizBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>
