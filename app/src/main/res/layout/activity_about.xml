<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recyclerView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".ui.AboutActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/aboutCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="12dp"
        android:backgroundTint="#80FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="32dp">

            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/ic_launcher_round"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_shadow"
                android:contentDescription="Logo"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/appName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FlashLearn Pro"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <View
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:background="#BB86FC"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/groupName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Killian, Mathéo, Raphaël, Lenny"
                android:textColor="#9E9E9E"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginBottom="24dp" />


            <TextView
                android:id="@+id/aboutDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apprenez rapidement avec FlashLearn grâce aux flashcards interactives. Testez vos connaissances, suivez vos progrès et progressez chaque jour !"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="24dp" />

            <TextView
                android:id="@+id/versionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Version 1.0.0"
                android:textColor="#BB86FC"
                android:textSize="14sp"
                android:layout_marginBottom="32dp" />

            <Button
                android:id="@+id/backButton"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="⬅ Retour"
                android:textColor="#FFFFFF"
                android:backgroundTint="#BB86FC"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:elevation="8dp"
                android:stateListAnimator="@null"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
